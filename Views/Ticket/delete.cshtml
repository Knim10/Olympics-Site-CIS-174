@model Ticket

@{
    ViewData["Title"] = "Delete Ticket";
}

<h2>Delete Ticket</h2>

<div class="alert alert-warning">
    <p>Are you sure you want to delete this ticket?</p>
</div>

<div class="card mb-3">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">@Model.Description</p>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Sprint: @Model.SprintNumber</li>
            <li class="list-group-item">Points: @Model.PointValue</li>
            <li class="list-group-item">Status: @Model.Status</li>
        </ul>
    </div>
</div>

<form asp-action="Delete" method="post" id="deleteForm">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const deleteForm = document.getElementById("deleteForm");

            deleteForm.addEventListener("submit", (e) => {
                const confirmed = confirm("Are you sure you want to delete this ticket?");
                if (!confirmed) {
                    e.preventDefault();
                }
            });
        });
    </script>
}
