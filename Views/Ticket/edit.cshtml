@model Ticket

<h2>Edit Ticket</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <label>Name:</label>
    <input asp-for="Name" /><br />
    <label>Description:</label>
    <input asp-for="Description" /><br />
    <label>Sprint:</label>
    <input asp-for="SprintNumber" /><br />
    <label>Points:</label>
    <input asp-for="PointValue" /><br />
    <label>Status:</label>
    <select asp-for="Status">
        <option>To Do</option>
        <option>In Progress</option>
        <option>QA</option>
        <option>Done</option>
    </select><br />
    <button type="submit">Save</button>
</form>
