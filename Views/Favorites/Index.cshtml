@model IEnumerable<OlympicGamesSite.Models.Sport>

<h2>Your Favorites</h2>

@if (!Model.Any())
{
    <p>You have no favorites yet.</p>
}
else
{
    <div style="display: flex; flex-wrap: wrap;">
        @foreach (var sport in Model)
        {
            <div style="margin: 10px;">
                <img src="~/flags/@(sport.Country.Replace(" ", ""))Flag.png"
                     alt="@sport.Country"
                     title="@sport.Country - @sport.Game - @sport.Category"
                     style="width: 100px; height: 60px;" />
                <div>@sport.Country</div>
            </div>
        }
    </div>
}

<form asp-action="Clear" method="post">
    <button type="submit">Clear Favorites</button>
</form>

<p>
    <a asp-action="Index" asp-controller="Home">Return to Home</a>
</p>
