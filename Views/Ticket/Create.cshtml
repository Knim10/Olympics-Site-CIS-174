@model Ticket

<h2>Create Ticket</h2>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Description"></label>
        <input asp-for="Description" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="SprintNumber"></label>
        <input asp-for="SprintNumber" />
        <span asp-validation-for="SprintNumber" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="PointValue"></label>
        <input asp-for="PointValue" />
        <span asp-validation-for="PointValue" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Status"></label>
        <select asp-for="Status">
            <option>To Do</option>
            <option>In Progress</option>
            <option>QA</option>
            <option>Done</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <button type="submit">Save</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
